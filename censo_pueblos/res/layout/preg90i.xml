<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/lay90i"
            android:layout_width="match_parent"
            android:layout_height="1075dp"
            android:orientation="vertical" >

                       
        
        
<!-- ///////////////////////////////////////// -->           
            
            
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/textPregunta90i"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/PREGUNTA90i"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="#002266"
                                android:textStyle="bold" />

                            <RadioGroup
                                android:id="@+id/rdPregunta90i"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:showDividers="middle" >
  
                <Spinner
                               android:id="@+id/spinner90i"
                               android:layout_width="259dp"
                               android:layout_height="wrap_content"
                               android:hint="Selecciona"
                                android:layout_marginTop="30dp"
                               android:spinnerMode="dialog"
                               android:singleLine="false" 
                               android:layout_marginLeft="10dp" />                

                            </RadioGroup>
 
                    </LinearLayout>
            </LinearLayout>
            
                  

            <!-- //////////////////////////////////////  BOTONES  /////////////// -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>