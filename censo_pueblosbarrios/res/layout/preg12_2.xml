<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/lay12_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textPregunta12_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/PREGUNTA12_2"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#002266"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdPregunta12_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textPregunta12_2a"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Años"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#002266"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editPregunta12_2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Años"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20sp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/textPregunta12_2m"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Meses"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#002266"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editPregunta12a_2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Meses"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <RadioButton
                        android:id="@+id/radio12_0_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:button="@drawable/radiobutton_selector"
                        android:text="No sabe / No contestó"
                        android:textColor="@drawable/radiobutton_color_selector"
                        android:textSize="16sp"
                        android:theme="@style/RadioButton" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>