<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff">

    <Button
        android:id="@+id/guardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_box"
        android:textColor="@drawable/color"
        android:text="Continuar" />
    
             <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewVivienda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escuela"
                android:textColor="#002266"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/camara"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="22dp" />

  <!--   <EditText
        android:id="@+id/editNombreFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guardar"
        android:layout_centerHorizontal="true"
        android:ems="10" 
        android:hint="Nombre FotografÃ­a">

        <requestFocus />
    </EditText> -->

    <ImageButton
        android:id="@+id/camara"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guardar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:layout_weight="0.78"
        android:background="@drawable/gradient_box"
        android:onClick="camara"
        android:src="@android:drawable/ic_menu_camera"
        android:textColor="@color/BLANCO" />
    
</RelativeLayout>